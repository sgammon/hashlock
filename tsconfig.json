{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "declaration": true
  },
  "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage"]
}
