{
  "name": "@build-infra/verify-hashes-action",
  "description": "Verify hash files (like something.sha256) from GitHub Actions",
  "version": "1.0.0",
  "author": {
    "name": "Sam Gammon",
    "url": "https://github.com/sgammon"
  },
  "homepage": "https://github.com/sgammon/verify-hashes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgammon/verify-hashes.git"
  },
  "bugs": {
    "url": "https://github.com/sgammon/verify-hashes/issues"
  },
  "keywords": [
    "actions",
    "cli",
    "provenance",
    "hash",
    "integrity",
    "check"
  ],
  "exports": {
    "./model": {
      "require": "./dist/model.js",
      "types": "./dist/model.d.ts"
    },
    "./logger": {
      "require": "./dist/logger.js",
      "types": "./dist/logger.d.ts"
    },
    "./main": {
      "require": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./action": {
      "require": "./dist/action.js",
      "types": "./dist/action.d.ts"
    },
    "./action-entry": {
      "require": "./dist/action-entry.js",
      "types": "./dist/action-entry.d.ts"
    },
    ".": {
      "require": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "scripts": {
    "build": "npm run format:write && npm run package",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "pnpm exec prettier --write .",
    "format:check": "pnpm exec prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/action.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--trace-warnings pnpm exec jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "slowTestThreshold": 30,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageProvider": "v8",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/setup.js"
    ]
  },
  "peerDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/glob": "0.4.0"
  },
  "peerDependenciesMeta": {
    "@actions/core": {
      "optional": true
    },
    "@actions/glob": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.29",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsonc": "^2.14.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "glob": "^10.3.10"
  }
}
