{
  "name": "verify-hashes",
  "version": "1.0.0-rc1",
  "description": "Verify hash files (like something.sha256) from GitHub Actions",
  "keywords": [
    "actions",
    "cli",
    "provenance",
    "hash",
    "integrity",
    "check"
  ],
  "homepage": "https://github.com/sgammon/verify-hashes",
  "bugs": {
    "url": "https://github.com/sgammon/verify-hashes/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgammon/verify-hashes"
  },
  "license": "MIT",
  "author": {
    "name": "Sam Gammon",
    "url": "https://github.com/sgammon"
  },
  "exports": {
    ".": {
      "require": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "scripts": {
    "all": "bun run format:write && bun run lint ; bun run build && bun run test && bun test && bun run coverage && bun run dist",
    "build": "bun ./scripts/build.mjs && bun run build:standalone",
    "build:standalone": "bun build ./src/entry.ts --compile --outfile ./bin/hashlock",
    "ci-test": "bun x jest",
    "cli": "./bin/hashlock",
    "coverage": "bun x make-coverage-badge --output-path ./badges/coverage.svg",
    "dist": "bun run build && bun run precompress && bun run stats",
    "format:check": "bun x prettier --check .",
    "format:write": "bun x prettier --write .",
    "hashlock": "./bin/hashlock",
    "lint": "bun x eslint . -c ./.github/linters/.eslintrc.yml",
    "lockfiles": "rm -fr node_modules && npm i && rm -fr node_modules && bun i && rm -fr node_modules && pnpm i",
    "precompress": "cd dist && pigz -p 4 -k -f -9 ./*.js",
    "stats": "echo Distribution Stats: && du -h ./bin/* ./bin && du -h ./dist/* ./dist",
    "test": "bun x jest",
    "test:bun": "bun test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "signed-off-by": [
        2,
        "always"
      ]
    }
  },
  "lint-staged": {
    "*": "bun run format:check"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageProvider": "v8",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/__tests__/setup.js"
    ],
    "slowTestThreshold": 30,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@actions/core": "1.10.1",
    "@clack/core": "0.3.4",
    "@clack/prompts": "0.7.0",
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@microsoft/eslint-formatter-sarif": "3.0.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.30",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "@vercel/ncc": "0.38.1",
    "chalk": "5.3.0",
    "commander": "12.0.0",
    "esbuild": "0.20.2",
    "eslint": "8.57.0",
    "eslint-plugin-github": "4.10.2",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-jsonc": "2.14.1",
    "eslint-plugin-prettier": "5.1.3",
    "glob": "10.3.10",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "make-coverage-badge": "1.2.0",
    "prettier": "3.2.5",
    "prettier-eslint": "16.3.0",
    "prettier-plugin-packagejson": "2.4.12",
    "ts-jest": "29.1.2",
    "typescript": "5.4.2"
  },
  "packageManager": "pnpm@8.15.5+sha256.4b4efa12490e5055d59b9b9fc9438b7d581a6b7af3b5675eb5c5f447cee1a589",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": false
  }
}
